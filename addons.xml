<addon id="plugin.image.bancadejornais" name="Banca de Jornais" version="1.0.3"
       provider-name="enen92">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>image</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Veja as capas dos jornais no Kodi</summary>
    <description>
      Veja as capas dos principais jornais diariamente no Kodi. As capas sao retiradas do site banca sapo. Para suporte visite o forum oficial forum.kodi.tv ou forum.aminhacasadigital.com
    </description>
    <license>GPL 2.0</license>
  </extension>
</addon>

<addon id="plugin.video.LiveTV" name="Live!t TV" provider-name="Live!t TV" version="2.1.4">
